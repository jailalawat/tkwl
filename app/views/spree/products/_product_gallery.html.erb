	      <% @product.images.drop(1).each.with_index(1) do |i,e| %>
		   <div class="col-md-3 col-xs-3">
	          <%= link_to(image_tag(i.attachment.url(:small), class: "thumbnail product-thumbnails img-responsive"), i.attachment.url(:grande), :title => i.alt, :data => { :gallery => ''} ) %>
		  </div><!-- col -->
		  
		  <% @i -= 1 %>
		  <%  next unless @i.zero? %>
		  <% @i = 4 %>
		  		</div><div class="row">
		  <% end %>
		 </div><!-- row --> 
	 <% end %>
	 

	      <% if @product.has_variants? %>
		  <div class='row'>  
	        <% @product.variant_images.each.with_index do |i,e| %>
	          <% next if @product.images.include?(i) %>
	          <div class="col-md-3 col-xs-3">
	            <%= link_to(image_tag(i.attachment.url(:small), class: "thumbnail"), i.attachment.url(:grande), :data => { :gallery => ''}) %>
			  </div><!-- col -->
			  	<% if (e/4) == 1 %>
			  		</div><div class="row">
			  <% end %>
	        <% end %>
	      <% end %>
	    </div><!-- row -->
	  </div><!-- end gallery links -->
