      <div class="row main-image-row">
		  <% if defined?(image) && image %>
		    <%= link_to(image_tag(@product.images[0].attachment.url(:large), class: "img-responsive"), @product.images[0].attachment.url(:large), :class => "thumbnail col-md-12 main-product-image", :data => { :gallery => ''}) %>
